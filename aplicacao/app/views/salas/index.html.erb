<p id="notice"><%= bootstrap_flash %></p>
<div class="page-header">
<h1>Salas</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Número</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.numero %></td>
        <td><%= sala.descricao %></td>
        <td><%= link_to 'Ver', sala %></td>
        <td><%= link_to 'Editar', edit_sala_path(sala) %></td>
        <td><%= link_to 'Destruir', sala, method: :delete, data: { confirm: 'Você tem certeza ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Sala', new_sala_path %>
