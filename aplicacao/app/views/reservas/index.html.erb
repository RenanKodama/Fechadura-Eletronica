<p id="notice"><%= bootstrap_flash %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Horarioinicio</th>
      <th>Horariofim</th>
      <th>Motivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.horarioinicio %></td>
        <td><%= reserva.horariofim %></td>
        <td><%= reserva.motivo %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reserva', new_reserva_path %>
